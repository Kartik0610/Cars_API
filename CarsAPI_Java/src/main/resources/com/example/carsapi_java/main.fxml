<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.carsapi_java.MainController">
    <top>
        <VBox alignment="CENTER" spacing="10.0" style="-fx-background-color: linear-gradient(to bottom right, #4a4e69, #9a8c98);">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>


            <HBox alignment="CENTER" spacing="10.0">
                <TextField fx:id="companyNameTextField" promptText="Enter company name" style="-fx-background-color: #f2e9e4; -fx-prompt-text-fill: #4a4e69;" />
                <Button onAction="#searchCars" text="Search" style="-fx-background-color: #c9ada7; -fx-text-fill: white; -fx-font-weight: bold;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ListView fx:id="carListView" style="-fx-background-color: #f2e9e4;" />
    </center>
</BorderPane>